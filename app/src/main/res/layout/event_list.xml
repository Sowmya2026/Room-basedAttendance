<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Name -->
        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name: [Dynamic Event Name Here]"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/soft_green"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"/>

        <!-- Date and Time Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Event Date -->
            <TextView
                android:id="@+id/tv_event_date"
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:text="Event Date: [Dynamic Date Here]"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Event Time -->
            <TextView
                android:id="@+id/tv_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Time: [Dynamic Time Here]"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="4dp"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Event Venue -->
        <TextView
            android:id="@+id/tv_event_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue: [Dynamic Venue Here]"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_location"
            android:tint="@color/black"
            android:drawablePadding="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end" />

        <!-- Event Details -->
        <TextView
            android:id="@+id/tv_event_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details: [Dynamic Event Details Here]"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
