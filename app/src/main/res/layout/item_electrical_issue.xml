<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Issue Description -->
        <TextView
            android:id="@+id/tvIssueDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue Description: [Dynamic Issue Description Here]"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="10dp"/>

        <!-- Room Number -->
        <TextView
            android:id="@+id/tvRoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Number: [Dynamic Room Number Here]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <!-- Registration Number -->
        <TextView
            android:id="@+id/tvRegNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Number: [Dynamic Registration Number Here]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student: John Doe"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="@android:color/black" />
        <!-- Available Timing -->
        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time: 08:00"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time: 10:00"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
